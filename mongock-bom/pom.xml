<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>mongock</artifactId>
    <groupId>io.mongock</groupId>
    <version>5.0.27-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <name>Mongock main BOM for community distribution</name>
  <artifactId>mongock-bom</artifactId>
  <packaging>pom</packaging>
  <description>Mongock for community dependency management</description>
  <url>https://github.com/mongock/mongock/mongock-bom</url>

  <properties>
    <java.version>1.8</java.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <maven.javadoc.failOnError>false</maven.javadoc.failOnError>

    <core.version>5.0.27</core.version>
    <mongodb.version>5.0.27</mongodb.version>
    <dynamodb.version>5.0.27.BETA</dynamodb.version>
  </properties>

  <dependencyManagement>
    <dependencies>

      <!-- Core -->
      <dependency>
        <groupId>io.mongock</groupId>
        <artifactId>mongock-core-bom</artifactId>
        <version>${core.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <!-- MongoDB -->
      <dependency>
        <groupId>io.mongock</groupId>
        <artifactId>mongock-driver-mongodb-bom</artifactId>
        <version>${mongodb.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <!-- DynamoDB -->
      <dependency>
        <groupId>io.mongock</groupId>
        <artifactId>mongock-driver-dynamodb-bom</artifactId>
        <version>${dynamodb.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>
