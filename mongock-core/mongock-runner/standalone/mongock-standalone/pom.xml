  <artifactId>mongock-standalone</artifactId>
  <name>Mongock standalone runner</name>
  <description>Standalone runner for Mongock</description>
  <url>https://github.com/mongock/mongock</url>

  <dependencies>
    <dependency>
      <groupId>io.mongock</groupId>
      <artifactId>mongock-standalone-base</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
        <version>${slf4j-api.version}</version>
    </dependency>

    <!-- TESTS -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
